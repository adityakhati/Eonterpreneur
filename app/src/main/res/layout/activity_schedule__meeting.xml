<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Schedule_meeting.Schedule_Meeting_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/des_ed"
            android:hint="Tell Why You Want To Meet:"

            android:textSize="25sp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_marginHorizontal="36dp"
            android:layout_height="wrap_content"
            android:id="@+id/loc_ed"
            android:layout_marginTop="25dp"
            android:hint="Pick Location:"

            android:textSize="25sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick Time:"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/time_picker_bt"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_width="match_parent"
            android:text="Time"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick Date:"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/date_picker_bt"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_width="match_parent"
            android:text="Date"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/request_bt"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_width="match_parent"
            android:layout_marginTop="55dp"
            android:text="Request\n Meeting"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>