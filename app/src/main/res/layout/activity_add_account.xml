<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Account_Activities.Add_Account_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:gravity="center"
        android:background="@drawable/rounded_card_36"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="36dp"
        android:paddingRight="24dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money:*"
                android:textColor="@color/secondary_text"
                android:textSize="20dp"
                android:paddingLeft="12dp"/>

            <RadioGroup
                android:id="@+id/radio_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_gender_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="@color/primary_dark"
                    android:padding="8dp"
                    android:layout_marginLeft="18dp"
                    android:textSize="16dp"
                    android:text="Give"/>

                <RadioButton
                    android:id="@+id/radio_gender_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:buttonTint="@color/primary_dark"
                    android:padding="8dp"
                    android:layout_marginLeft="18dp"
                    android:textSize="16dp"
                    android:text="Take"/>

            </RadioGroup>
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/input_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reason*"
                android:background="@drawable/corner_radius_textview"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="20dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/input_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/corner_radius_textview"
                android:textSize="20dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">


            <Button
                android:id="@+id/input_dob"
                android:layout_width="match_parent"
                android:background="@drawable/corner_radius_textview"
                android:layout_height="wrap_content"
                android:hint="@string/dob_hint"
                android:inputType="textPersonName"
                android:padding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/input_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Amount Spent *"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textSize="20dp"
                android:background="@drawable/corner_radius_textview"
                />
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/btn_create_acc"
            style="@style/Button.Primary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_rounded"
            android:padding="18dp"
            android:backgroundTint="@color/primary"
            android:text="Create"
            android:textSize="18dip" />

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>